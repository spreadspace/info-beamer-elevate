{
    "name": "Location Preview",
    "permissions": {
        "network": "Has to fetch schedule from remote site"
    },
    "options": [{
        "title": "Appearance",
        "type": "section"
    }, {
        "title": "Background color",
        "ui_width": 3,
        "name": "background_color",
        "type": "color",
        "default": [0,0,0,1]
    }, {
        "title": "Foreground color",
        "ui_width": 3,
        "name": "foreground_color",
        "type": "color",
        "default": [1,1,1,1]
    }, {
        "title": "Font",
        "ui_width": 3,
        "name": "font",
        "type": "font",
        "default": "silkscreen.ttf"
    }, {
        "title": "Font Bold",
        "ui_width": 3,
        "name": "font_bold",
        "type": "font",
        "default": "silkscreen.ttf"
    }, {
        "title": "Logo",
        "ui_width": 4,
        "name": "logo",
        "type": "resource",
        "valid": ["image"],
        "default": "logo-black.png"
    }, {
        "title": "Static Background",
        "ui_width": 4,
        "name": "background_static",
        "hint": "This is only used if device background style is set to static",
        "type": "resource",
        "valid": ["image"],
        "default": "empty.png"
    }, {
        "title": "Video Background",
        "ui_width": 4,
        "name": "background_video",
        "hint": "This is only used if device background style is set to video",
        "type": "resource",
        "valid": ["video"],
        "default": ""
    },

    {
        "title": "Clock",
        "type": "section"
    }, {
        "title": "Time Zone",
        "ui_width": 4,
        "name": "timezone",
        "type": "select",
        "hint": "The timezone",
        "options": [
            ["UTC", "UTC"],
            ["Europe/Vienna", "Europa / Wien"]
        ],
        "default": "Europe/Vienna"
    },

    {
        "title": "Slide Display Times",
        "type": "section"
    }, {
        "title": "Current Locations",
        "ui_width": 4,
        "name": "slide_time_local",
        "type": "duration",
        "hint": "How long to display current location information in seconds",
        "default": 15
    }, {
        "title": "Empty",
        "ui_width": 4,
        "name": "slide_time_empty",
        "type": "duration",
        "hint": "How long to display any empty slide if there are now local events",
        "default": 3
    }, {
        "title": "Other Locations",
        "ui_width": 4,
        "name": "slide_time_remote",
        "type": "duration",
        "hint": "How long to display other locations information in seconds",
        "default": 10
    }, {
        "title": "Sponsors",
        "ui_width": 4,
        "name": "slide_time_sponsor",
        "type": "duration",
        "hint": "How long to display sponsor slides in seconds",
        "default": 5
    }, {
        "title": "Sponsors Skip",
        "ui_width": 4,
        "name": "slide_sponsor_skip",
        "type": "integer",
        "hint": "Skip sponser slide every x iterations, 0 shows it in all iterations, 1 will skip every other iteration ...",
        "default": 0
    },

    {
        "title": "Scheduling",
        "type": "section"
    }, {
        "title": "EIS API Url",
        "ui_width": 9,
        "name": "eis_api_url",
        "type": "string",
        "default": "https://eis.elevate.at/API/rest/index"
    }, {
        "title": "Year",
        "ui_width": 3,
        "name": "year",
        "type": "integer",
        "default": 2020
    }, {
        "title": "Tracks",
        "name": "tracks",
        "type": "list",
        "itemname": "Track",
        "hint": "Track definitions",
        "items": [{
            "title": "Track ID",
            "ui_width": 3,
            "name": "id",
            "type": "string",
            "default": ""
        }, {
            "title": "EIS ID",
            "ui_width": 3,
            "name": "eis_id",
            "type": "string",
            "default": ""
        }, {
            "title": "Track Name",
            "ui_width": 6,
            "name": "name",
            "type": "string",
            "default": ""
        }, {
            "title": "Background color",
            "ui_width": 3,
            "name": "background_color",
            "type": "color",
            "default": [0,0,0,1]
        }, {
            "title": "Foreground color",
            "ui_width": 3,
            "name": "foreground_color",
            "type": "color",
            "default": [1,1,1,1]
        }]
    }, {
        "title": "Locations",
        "name": "locations",
        "type": "list",
        "itemname": "Location",
        "hint": "Location definitions",
        "items": [{
            "title": "Location ID",
            "ui_width": 3,
            "name": "id",
            "type": "string",
            "default": ""
        }, {
            "title": "EIS ID",
            "ui_width": 3,
            "name": "eis_id",
            "type": "string",
            "default": ""
        }, {
            "title": "Location Name",
            "ui_width": 6,
            "name": "name",
            "type": "string",
            "default": ""
        }]
    }, {
        "title": "Sponsors",
        "name": "sponsors",
        "type": "list",
        "itemname": "Slide",
        "items": [{
            "title": "Image",
            "ui_width": 12,
            "name": "image",
            "type": "resource",
            "valid": ["image"],
            "default": ""
        }]
    }, {
        "title": "Devices",
        "name": "devices",
        "type": "list",
        "itemname": "Device",
        "hint": "Device definitions",
        "items": [{
            "title": "Device",
            "ui_width": 6,
            "name": "serial",
            "type": "device"
        }, {
            "title": "Location ID",
            "ui_width": 6,
            "name": "location",
            "type": "string",
            "default": ""
        }, {
            "title": "BG Style",
            "ui_width": 12,
            "name": "bg_style",
            "hint": "Background animation style",
            "type": "select",
            "options": [
               ["static", "static background (no animation)"],
               ["video", "use video as background"],
               ["fancy-minimal", "minimal animation (needs minimal GPU power)"],
               ["fancy-full", "animation with maximum fanciness (needs lots of GPU power)"]
            ]
        }]
    }]
}
