{
    "name": "Location Preview",
    "permissions": {
        "network": "Has to fetch schedule from remote site"
    },
    "options": [{
        "title": "Appearance",
        "type": "section"
    }, {
        "title": "Background color",
        "ui_width": 4,
        "name": "background_color",
        "type": "color",
        "default": [0,0,0,1]
    }, {
        "title": "Foreground color",
        "ui_width": 4,
        "name": "foreground_color",
        "type": "color",
        "default": [1,1,1,1]
    }, {
        "title": "Background",
        "ui_width": 4,
        "name": "background",
        "hint": "This is only used if device background style is set to static",
        "type": "resource",
        "valid": ["image", "video", "child"],
        "default": "empty.png"
    }, {
        "title": "Logo",
        "ui_width": 4,
        "name": "logo",
        "type": "resource",
        "valid": ["image", "video", "child"],
        "default": "logo.png"
    },{
        "title": "Font",
        "ui_width": 4,
        "name": "font",
        "type": "font",
        "default": "silkscreen.ttf"
    }, {
        "title": "Font Bold",
        "ui_width": 4,
        "name": "font_bold",
        "type": "font",
        "default": ""
    },

    {
        "title": "Clock",
        "type": "section"
    }, {
        "title": "Time Zone",
        "ui_width": 4,
        "name": "timezone",
        "type": "select",
        "hint": "The timezone",
        "options": [
            ["UTC", "UTC"],
            ["Europe/Vienna", "Europa / Wien"]
        ],
        "default": "Europe/Vienna"
    },

    {
        "title": "Slides",
        "type": "section"
    }, {
        "title": "Current Locations (seconds)",
        "ui_width": 4,
        "name": "current_location",
        "type": "duration",
        "hint": "How long to display current talk information",
        "default": 15
    }, {
        "title": "Other Locations (seconds)",
        "ui_width": 4,
        "name": "other_locations",
        "type": "duration",
        "hint": "How long to display other location information",
        "default": 25
    },

    {
        "title": "Scheduling",
        "type": "section"
    }, {
        "title": "EIS API Url",
        "ui_width": 10,
        "name": "eis_api_url",
        "type": "string",
        "default": "https://eis.elevate.at/API/rest/index"
    }, {
        "title": "Tracks",
        "name": "tracks",
        "type": "list",
        "itemname": "Track",
        "hint": "Track definitions",
        "items": [{
            "title": "Track ID",
            "ui_width": 4,
            "name": "id",
            "type": "string",
            "default": ""
        }, {
            "title": "Track Name",
            "ui_width": 6,
            "name": "name",
            "type": "string",
            "default": ""
        }, {
            "title": "Background color",
            "ui_width": 4,
            "name": "background_color",
            "type": "color",
            "default": [0,0,0,1]
        }, {
            "title": "Foreground color",
            "ui_width": 4,
            "name": "foreground_color",
            "type": "color",
            "default": [1,1,1,1]
        }]
    }, {
        "title": "Locations",
        "name": "locations",
        "type": "list",
        "itemname": "Location",
        "hint": "Location definitions",
        "items": [{
            "title": "Location ID",
            "ui_width": 4,
            "name": "id",
            "type": "string",
            "default": ""
        }, {
            "title": "Location Name",
            "ui_width": 6,
            "name": "name",
            "type": "string",
            "default": ""
        }]
    }, {
        "title": "Devices",
        "name": "devices",
        "type": "list",
        "itemname": "Device",
        "hint": "Device definitions",
        "items": [{
            "title": "Device",
            "ui_width": 6,
            "name": "serial",
            "type": "device"
        }, {
            "title": "Location ID",
            "ui_width": 5,
            "name": "location",
            "type": "string",
            "default": ""
        }, {
            "title": "BG Style",
            "ui_width": 6,
            "name": "bg_style",
            "hint": "Background animation style",
            "type": "select",
            "options": [
               ["static", "static background (no animation)"],
               ["minimal", "minimal animation (needs minimal GPU power)"],
               ["fancy", "fancy animation (needs lots of GPU power)"]
            ]
        }, {
            "title": "Aspect",
            "ui_width": 4,
            "name": "aspect_ratio",
            "type": "select",
            "options": [
               [0.0, "auto"],
               [1,777777778, "16:9"],
               [1,333333333, "4:3"]
            ]
        }]
    }]
}
